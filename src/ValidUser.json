{
  "comment": "Schema for user validation during registration",
  "type": "object", "properties": { "email": {
      "type": "email"
    },
    "password": {
      "type": "string",
      "minLenght": 4,
      "maxLenght": 256
    },
    "first_name": {
      "type": "string",
      "minLenght": 1,
      "maxLenght": 128,
      "pattern": "^[a-zA-Z][a-zA-Z0-9-_/\./\\t]$"
    },
    "last_name": {
      "type": "string"
    },
    "picture": {
      "type": "uri"
    }, "required":["email", "password", "first_name"],
    "additionalProperties": false
  }
}